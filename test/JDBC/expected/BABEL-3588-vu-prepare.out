CREATE TABLE babel_3588_t1(a1 int PRIMARY KEY, b1 int, c1 int)
GO

CREATE TABLE babel_3588_t2(a2 int PRIMARY KEY, b2 int, c2 int)
GO

CREATE PROCEDURE babel_3588_proc_1 AS SELECT babel_3588_t1.a1 FROM babel_3588_t1 inner merge join babel_3588_t2 ON a1 = b2
GO

