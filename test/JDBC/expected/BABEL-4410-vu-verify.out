-- psql
SELECT pg_attribute.attname, pg_type.typname, pg_type.typinput, pg_type.typoutput, pg_type.typreceive, pg_type.typsend 
FROM pg_attribute LEFT OUTER JOIN pg_type 
ON pg_attribute.atttypid = pg_type.oid 
WHERE pg_attribute.attname='TABLE_TYPE';
GO
