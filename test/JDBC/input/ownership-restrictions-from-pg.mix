-- Give a bbf role the ability to create other roles, login, nologin and new databases should fail
ALTER ROLE master_role1 LOGIN;
GO

ALTER ROLE master_role1 NOLOGIN;
GO

ALTER ROLE master_role1 CREATEDB;
GO

ALTER ROLE master_role1 CREATEROLE CREATEDB;
GO

-- Change bbf role's password should fail
ALTER ROLE master_role1 PASSWORD '123';
GO

ALTER ROLE master_role1 WITH PASSWORD '123';
GO

ALTER ROLE master_role1 WITH PASSWORD NULL;
GO

-- Make a password valid until a particular period for bbf role should fail
ALTER ROLE master_role1 VALID UNTIL 'NOV 4 12:00:00 2022 +1';
GO

ALTER ROLE master_role1 VALID UNTIL 'infinity';
GO

-- Give a bbf role a non-default setting of the x parameter should fail
ALTER ROLE master_role1 SET x =false;
GO

-- Give a bbf role a non-default, database-specific setting of the x parameter should fail
ALTER ROLE master_role1 IN DATABASE postgres set x=false;
GO

