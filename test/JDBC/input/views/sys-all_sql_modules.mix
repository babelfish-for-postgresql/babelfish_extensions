-- Test for function
SELECT
    definition,
    uses_ansi_nulls,
    uses_quoted_identifier,
    is_schema_bound,
    uses_database_collation,
    is_recompiled,
    null_on_null_input,
    execute_as_principal_id,
    uses_native_compilation
FROM sys.all_sql_modules
WHERE definition LIKE 'CREATE FUNCTION dbo.sys_all_sql_modules_vu_prepare_f1()%'
GO

