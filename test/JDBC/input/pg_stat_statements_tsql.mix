-- break/print (These are T-SQL only statements, not visible in the view)
DECLARE @counter INT = 0;
WHILE @counter <= 5
BEGIN
SET @counter = @counter + 1;
IF @counter = 4
break
ELSE 
PRINT @counter;
end
